
<div class="container-fluid">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Ingresar", new_session_path(resource_name), class:"btn btn-primary" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Registrarse", new_registration_path(resource_name), class:"btn btn-info" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Olvidó su Password?", new_password_path(resource_name), class:"btn btn-warning" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Recibió las Instrucciones de Confirmación?", new_confirmation_path(resource_name) %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Recibió las Instrucciones de Confirmación?", new_unlock_path(resource_name) %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Ingresar #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %>
    <% end %>
  <% end %>
</div>
