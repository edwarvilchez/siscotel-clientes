  <div class="card-body">
    <h5 class="card-title"></h5>
    <p class="card-text"><%= button_to "Eliminar mi Cuenta", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Est치 Seguro?" }, method: :delete, class:"btn btn-danger" %>      
    </p>
  </div>
</div>

